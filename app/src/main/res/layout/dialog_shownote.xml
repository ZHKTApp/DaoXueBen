<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="900dp"
        android:layout_height="67dp"
        android:background="@drawable/drawable_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/text_24_green"
            android:layout_centerHorizontal="true"
            android:text="笔记" />

        <ImageView
            android:id="@+id/tv_dialog_close"
            android:layout_width="@dimen/common_margin_18dp"
            android:layout_height="@dimen/common_margin_18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin_15dp"
            android:background="@mipmap/close" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="860dp"
        android:layout_height="469dp"
        android:background="@color/white"
        android:scrollbarSize="3dp"
        android:scrollbarThumbVertical="@color/c_green"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin_5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_dialogNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin_5dp"
                android:orientation="vertical"
                android:padding="@dimen/common_margin_5dp" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/add" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_dialog_cancle"
        android:layout_width="96dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/common_margin_10dp"
        android:background="@drawable/drawable_green_bg"
        android:gravity="center"
        android:text="关闭"
        android:textSize="18sp"
        android:textColor="@color/white" />


</LinearLayout>